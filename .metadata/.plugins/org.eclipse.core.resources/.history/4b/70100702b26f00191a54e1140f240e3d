 */

#ifndef MPU6050_H_
#define MPU6050_H_




/********************************** Includes *********************************/
#include <math.h>
#include "cmsis_os.h"
#include "i2c.h"
#include "MPU6050_t.h"




/********************************* Functions *********************************/
// These should only be used before the scheduler is started
int MPU6050Init(MPU6050_t* myMPU);
void resetIMUBlocking(void);

// These are the only ones that should really be used during runtime once the
// scheduler has started.
int accelReadDMA(MPU6050_t* myMPU, osSemaphoreId sem);
int gyroReadDMA(MPU6050_t* myMPU, osSemaphoreId sem);

/**
 * @}
 */
/* end - MPU6050_Driver_Header */

#endif /* MPU6050_H_ */
